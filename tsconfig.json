{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2023",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  },
  "include": ["src", "api/index.ts"],
  "exclude": ["node_modules", "dist"]
}