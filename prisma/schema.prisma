generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model branches {
  id                                                  String      @id
  code                                                String      @db.VarChar(10)
  name                                                String      @db.VarChar(100)
  created_at                                          DateTime?   @default(now()) @db.Timestamptz(6)
  movements_movements_branch_idTobranches             movements[] @relation("movements_branch_idTobranches")
  movements_movements_destination_branch_idTobranches movements[] @relation("movements_destination_branch_idTobranches")
  stock                                               stock[]
  users                                               users[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model movements {
  id                                                 String    @id
  branch_id                                          String?
  product_id                                         String?
  product_department                                 String?   @db.VarChar(50)
  quantity                                           Int
  type                                               String    @db.VarChar(20)
  invoice_number                                     String?   @db.VarChar(50)
  notes                                              String?
  created_at                                         DateTime? @default(now()) @db.Timestamptz(6)
  destination_branch_id                              String?
  branches_movements_branch_idTobranches             branches? @relation("movements_branch_idTobranches", fields: [branch_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  branches_movements_destination_branch_idTobranches branches? @relation("movements_destination_branch_idTobranches", fields: [destination_branch_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products                                           products? @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model products {
  id          String      @id
  code        String      @db.VarChar(50)
  name        String      @db.VarChar(100)
  description String?
  department  String      @db.VarChar(50)
  unit        String?     @db.VarChar(10)
  created_at  DateTime?   @default(now()) @db.Timestamptz(6)
  movements   movements[]
  stock       stock[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model stock {
  branch_id  String
  product_id String
  quantity   Int       @default(0)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
  branches   branches  @relation(fields: [branch_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "branch_stock_branch_id_fkey")
  products   products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "branch_stock_product_id_fkey")

  @@id([branch_id, product_id], map: "branch_stock_pkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id         String    @id @default(dbgenerated("gen_random_uuid()"))
  username   String    @unique @db.VarChar(50)
  name       String    @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(255)
  role       String    @db.VarChar(20)
  department String?   @db.VarChar(50)
  branch_id  String?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  branches   branches? @relation(fields: [branch_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
